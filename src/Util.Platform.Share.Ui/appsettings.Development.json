{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Warning"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "c:\\log\\util.platform-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 102400,
          "retainedFileCountLimit": 10,
          "outputTemplate": "{LogLevel}  >>  [{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] {NewLine}{Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}